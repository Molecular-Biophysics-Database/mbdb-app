{# def record, metadata, ui, extra_context, d, context #}

{% set md=d.metadata %}
{% set gp=md.general_parameters %}
{% set msp=md.method_specific_parameters %}

<itc.MBDB.RecordHeader md={md} links={d.links} />

{#
    note: if you do not specify label for IField, it is taken directly from the model
    (and translated to the current language) and thus is consistent with facets
#}

<IValueList>
    <IField d={d.id} label="Record ID"  field_class="mbdbv-record-technique" />
    <IField d={gp.technique} field_class="mbdbv-record-technique" />
    <IField d={gp.depositors} field_class="mbdbv-record-technique">
        <itc.MBDB.Depositors depositors={gp.depositors} />
    </IField>
</IValueList>

{#        <IField label="Main Publication:" #}
{#                d={gp.associated_publication}#}
{#                field_class="mbdbv-record-technique">#}
{#            <AssociatedPublication d={gp.associated_publication} />#}
{#        </IField>#}


<div class="mbdbv-record-container">

    <itc.Common.Section title="Entities of interest"}>
        <itc.MBDB.EntitiesOfInterest entities={gp.entities_of_interest} />
    </itc.Common.Section>

    <itc.Common.Section title="Results">
        <itc.ITC.Results gp={gp} />
    </itc.Common.Section>

    <itc.Common.Section title="Measurements">
        <itc.ITC.Measurements gp={gp} msp={msp} />
    </itc.Common.Section>

    <itc.Common.Section title="Instrument">
        <itc.MBDB.Instrument instrument={gp.instrument} />
    </itc.Common.Section>

    <itc.Common.Section title="Raw measurements" >
        <itc.MBDB.RawMeasurements raw_measurements={gp.raw_measurements} files={extra_context.files} />
    </itc.Common.Section>

</div>
